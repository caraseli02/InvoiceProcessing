OPENAI_API_KEY=sk-proj-...
OPENAI_TIMEOUT_SEC=180

API_HOST=0.0.0.0
API_PORT=8000

# Environment mode: local (default) or production (strict validation)
APP_ENV=local

# Supabase JWT validation (required for protected API routes)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# CORS settings - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,https://lavio.vercel.app

# Local dev shortcut (optional). Never enable in production.
ALLOW_API_KEY_AUTH=false
# API_KEYS=dev-key-12345

# Debug/observability headers (dev-only unless explicitly allowed in production)
EXTRACT_CACHE_DEBUG_HEADERS=false
EXTRACT_OBSERVABILITY_HEADERS=false
ALLOW_PROD_DEBUG_HEADERS=false

# Currency settings
ALLOWED_CURRENCIES=EUR,USD,MDL,RUB,RON

SCALE_FACTOR=0.2
TOLERANCE=3
OCR_DPI=150
MAX_PDF_SIZE_MB=2
OCR_LANGUAGES=ron+eng+rus
OCR_CONFIG=--oem 1 --psm 6

LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0
MAX_TOKENS=4096
